{
    "name": "digilab-docs",
    "version": "1.0.0",
    "description": "Progetto per generare documentazione API con ReDoc e hot deploy con nodemon",
    "main": "index.js",
    "scripts": {
        "build": "redoc-cli bundle api-spec.yaml -o index.html",
        "serve": "browser-sync start --server --files index.html",
        "watch": "nodemon --watch api-spec.yaml --exec \"npm run build\"",
        "start": "concurrently \"npm run watch\" \"npm run serve\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.21.2",
        "redoc-cli": "^0.13.0"
    },
    "devDependencies": {
        "browser-sync": "^3.0.3",
        "concurrently": "^7.0.0",
        "nodemon": "^2.0.15"
    }
}